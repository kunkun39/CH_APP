<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main" >
	<RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="680dp">
		<include
        android:id="@+id/focus_item"
        layout="@layout/rankings_item"
        android:visibility="invisible" />
	    <TextView
	        android:id="@+id/ranking_list"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="150dp"
	        android:layout_marginTop="60dp"
	        android:text="@string/str_ranking_list"
	        android:textSize="30sp" />
	    <ImageView 
	        android:id="@+id/img_new"
	        android:layout_width="350dp"
	        android:layout_height="60dp"
	        android:layout_marginLeft="105dp"
	        android:layout_marginTop="120dp"
	        android:background="@drawable/img_new"/>
	    <ImageView 
	        android:id="@+id/img_hot"
	        android:layout_width="350dp"
	        android:layout_height="60dp"
	        android:layout_marginLeft="465dp"
	        android:layout_marginTop="120dp"
	        android:background="@drawable/img_hot"/>
	    <ImageView 
	        android:id="@+id/img_surge"
	        android:layout_width="350dp"
	        android:layout_height="60dp"
	        android:layout_marginLeft="825dp"
	        android:layout_marginTop="120dp"
	        android:background="@drawable/img_surge"/>
	    <ListView 
	        android:id="@+id/listView_new"
	        android:layout_width="350dp"
	        android:layout_height="450dp"
	      	android:layout_below="@+id/img_new"
	      	android:layout_marginLeft="105dp"
	        android:divider="@null"
	        android:dividerHeight="2dp"
	        android:listSelector="#00000000"/>
	    <ListView 
	        android:id="@+id/listView_hot"
	        android:layout_width="350dp"
	        android:layout_height="450dp"
	        android:layout_below="@+id/img_hot"
	        android:layout_marginLeft="465dp"
	        android:divider="@null"
	        android:dividerHeight="2dp"
	        android:listSelector="#00000000" />
	    <ListView 
	        android:id="@+id/listView_surge"
	        android:layout_width="350dp"
	        android:layout_height="450dp"
	        android:layout_below="@+id/img_surge"
	        android:layout_marginLeft="825dp"
	        android:divider="@null"
	        android:dividerHeight="2dp"
	        android:listSelector="#00000000" />
    </RelativeLayout>

</RelativeLayout>
