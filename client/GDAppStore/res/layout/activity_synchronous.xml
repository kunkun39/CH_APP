<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_synch_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <Button
            android:id="@+id/bt_backup"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="备份" />

        <Button
            android:id="@+id/bt_recover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@id/bt_backup"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/bt_backup"
            android:text="恢复" />
        <Button
            android:id="@+id/bt_manage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@id/bt_recover"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/bt_recover"
            android:text="管理" />
    </RelativeLayout>

</RelativeLayout>