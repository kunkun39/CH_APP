<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main" >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_title_height"
        android:background="@drawable/bg_maintitle" >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/iv_logo_marginleft"
            android:src="@drawable/img_logo" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="90dp"
        android:text="云同步"
        android:textColor="@color/white"
        android:textSize="28dp" />

    <RelativeLayout
        android:id="@+id/rl_synch_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp" >

        <RelativeLayout
            android:id="@+id/rl_backup"
            android:layout_width="305dp"
            android:layout_height="415dp"
            android:background="@drawable/selector_bg_postitem"
            android:focusable="true" >

            <ImageView
                android:id="@+id/iv_icon_backup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:src="@drawable/img_icon" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="230dp"
                android:text="备份"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:text="上传已安装应用到云端"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recover"
            android:layout_width="305dp"
            android:layout_height="415dp"
            android:layout_alignTop="@id/rl_backup"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/rl_backup"
            android:background="@drawable/selector_bg_postitem"
            android:focusable="true" >

            <ImageView
                android:id="@+id/iv_icon_recover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:src="@drawable/img_icon" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="230dp"
                android:text="恢复"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:text="上传已安装应用到云端"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_manage"
            android:layout_width="305dp"
            android:layout_height="415dp"
            android:layout_alignTop="@id/rl_backup"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/rl_recover"
            android:background="@drawable/selector_bg_postitem"
            android:focusable="true" >

            <ImageView
                android:id="@+id/iv_icon_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:src="@drawable/img_icon" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="230dp"
                android:text="管理"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:text="管理云端应用"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sync_shandow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_synch_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/iv_sync_shandow1"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:background="@drawable/shap_gradient_blue" />

        <ImageView
            android:id="@+id/iv_sync_shandow2"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/iv_sync_shandow1"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_sync_shandow1"
            android:background="@drawable/shap_gradient_blue" />

        <ImageView
            android:id="@+id/iv_sync_shandow3"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/iv_sync_shandow1"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_sync_shandow2"
            android:background="@drawable/shap_gradient_blue" />
    </RelativeLayout>

</RelativeLayout>