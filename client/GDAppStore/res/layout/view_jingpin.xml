<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent" >

    <RelativeLayout
        android:id="@+id/rl_jingpin_categroys"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="fill_parent" >

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item1"
            android:layout_marginTop="@dimen/item_first_margintop"
            android:layout_marginLeft="@dimen/item_first_marginleft"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item2"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignLeft="@id/jingping_item1"
            android:layout_below="@id/jingping_item1"
            android:layout_marginTop="@dimen/item_square1_margintop" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item3"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignLeft="@id/jingping_item1"
            android:layout_below="@id/jingping_item2"
            android:layout_marginTop="@dimen/item_square1_margintop" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item4"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignLeft="@id/jingping_item1"
            android:layout_below="@id/jingping_item3"
            android:layout_marginTop="@dimen/item_square1_margintop" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item5"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignTop="@id/jingping_item4"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item4" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item6"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignTop="@id/jingping_item4"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item5" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item7"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignTop="@id/jingping_item4"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item6"
            layout="@layout/item_post" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item8"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignTop="@id/jingping_item4"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item7"
            layout="@layout/item_post" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item9"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignTop="@id/jingping_item4"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item8" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item10"
            android:layout_width="@dimen/item_square1_width"
            android:layout_height="@dimen/item_square1_height"
            android:layout_alignTop="@id/jingping_item4"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item9" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item11"
            android:layout_width="@dimen/item_big1_width"
            android:layout_height="@dimen/item_big1_height"
            android:layout_alignTop="@id/jingping_item1"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item1" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item12"
            android:layout_width="@dimen/item_big1_width"
            android:layout_height="@dimen/item_big1_height"
            android:layout_alignTop="@id/jingping_item1"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item11" />

        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/jingping_item13"
            android:layout_width="@dimen/item_big1_width"
            android:layout_height="@dimen/item_big1_height"
            android:layout_alignTop="@id/jingping_item1"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/jingping_item12" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_jingpin_focues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible" />

</RelativeLayout>