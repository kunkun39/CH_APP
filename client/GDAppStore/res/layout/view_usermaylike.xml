            android:layout_alignTop="@id/usermaylike_item0"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/usermaylike_item5" />
        <com.changhong.gdappstore.view.PostItemView
            android:id="@+id/usermaylike_item7"
            android:layout_width="@dimen/item_usermaylike_width"
            android:layout_height="@dimen/item_usermaylike_height"
            android:layout_alignTop="@id/usermaylike_item0"
            android:layout_marginLeft="@dimen/item_square1_margintop"
            android:layout_toRightOf="@id/usermaylike_item6" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_detail_focues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible" />

