<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_topiccontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/rl_topiccontentin"
            android:layout_width="@dimen/item_topic_width1"
            android:layout_height="@dimen/item_topic_height1"
            android:background="@drawable/img_focues_mainpost"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/iv_topic_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tv_topic_name"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/img_normal_square_cicle"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_topic_name"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/otc_blue"
                android:ellipsize="marquee"
                android:focusable="false"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_topic_shandow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rl_topiccontent"
        android:layout_alignRight="@id/rl_topiccontent"
        android:layout_below="@id/rl_topiccontent"
        android:layout_marginLeft="15dp" 
        android:layout_marginRight="15dp"
        android:layout_marginTop="-40dp"
        android:focusable="false"
        android:scaleType="fitXY"
        android:visibility="gone" />

</RelativeLayout>