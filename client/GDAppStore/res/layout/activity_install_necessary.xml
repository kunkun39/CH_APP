<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_install_necessary" >

    <LinearLayout
        android:id="@+id/ll_title_necessary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" >

        <ImageView
            android:id="@+id/iv_install_necessary_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_install_necessary_big" />

        <ImageView
            android:id="@+id/iv_install_necessary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/title_install_necessary" />
    </LinearLayout>

    <com.changhong.gdappstore.post.PosterLayoutView
        android:id="@+id/postview_installnessary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title_necessary"
        android:layout_marginBottom="-80dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

</RelativeLayout>