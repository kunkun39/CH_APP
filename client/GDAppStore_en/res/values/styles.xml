<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="style_btn_fullkeybord">
        <item name="android:background">@drawable/selector_search_full_keyboard</item>
        <item name="android:layout_width">@dimen/bt_keybord_width</item>
        <item name="android:layout_height">@dimen/bt_search_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/bt_keybord_margin</item>
        <item name="android:layout_marginTop">@dimen/bt_keybord_margin</item>
        <item name="android:layout_marginRight">@dimen/bt_keybord_margin</item>
        <item name="android:layout_marginBottom">@dimen/bt_keybord_margin</item>
    </style>

    <style name="Dialog_nowindowbg" parent="android:style/Theme.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
     <style name="anim_zoom" parent="@style/Theme.AppCompat">
         <item name="windowActionBar">false</item>
         <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/zoom</item>
         <item name="android:activityOpenEnterAnimation">@anim/zoomin</item>
         <item name="android:activityOpenExitAnimation">@anim/zoomout</item>
         <item name="android:activityCloseEnterAnimation">@anim/zoomin2</item>
         <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="zoom" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:activityOpenEnterAnimation">@anim/zoomin</item>
        <item name="android:activityOpenExitAnimation">@anim/zoomout</item>
        <item name="android:activityCloseEnterAnimation">@anim/zoomin2</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>
    
    <style name="TextMarqueeRepeatForever">
         <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
</resources>