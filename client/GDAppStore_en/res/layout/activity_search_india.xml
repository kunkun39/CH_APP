<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/searchpage_marginleft_right"
        android:layout_marginTop="70dp" >

        <TextView
            android:id="@+id/tv_searchname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/search"
            android:textColor="@color/Grey_500"
            android:textSize="40sp" />
    </RelativeLayout>
    <!-- 搜索输入框 -->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl_fullkeybord"
        android:layout_alignRight="@+id/rl_fullkeybord"
        android:layout_below="@id/rl_title"
        android:layout_marginLeft="@dimen/bt_keybord_margin"
        android:layout_marginRight="@dimen/bt_keybord_margin"
        android:layout_marginTop="70dp">
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/img_search"
            android:hint=""
            android:padding="3dp"
            android:singleLine="true"
            android:drawableBottom="@color/Orange_500"
            android:background="@color/Grey_500"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:id="@+id/rl_fullkeybord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_layout"
        android:layout_marginLeft="@dimen/searchpage_marginleft_right"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:id="@+id/ll_fullkeybord_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_fullkeybord_a"
                style="@style/style_btn_fullkeybord"
                android:text="A" />

            <Button
                android:id="@+id/bt_fullkeybord_b"
                style="@style/style_btn_fullkeybord"
                android:text="B" />

            <Button
                android:id="@+id/bt_fullkeybord_c"
                style="@style/style_btn_fullkeybord"
                android:text="C" />

            <Button
                android:id="@+id/bt_fullkeybord_d"
                style="@style/style_btn_fullkeybord"
                android:text="D" />

            <Button
                android:id="@+id/bt_fullkeybord_e"
                style="@style/style_btn_fullkeybord"
                android:text="E" />

            <Button
                android:id="@+id/bt_fullkeybord_f"
                style="@style/style_btn_fullkeybord"
                android:text="F" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fullkeybord_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ll_fullkeybord_row1"
            android:layout_below="@id/ll_fullkeybord_row1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_fullkeybord_g"
                style="@style/style_btn_fullkeybord"
                android:text="G" />

            <Button
                android:id="@+id/bt_fullkeybord_h"
                style="@style/style_btn_fullkeybord"
                android:text="H" />

            <Button
                android:id="@+id/bt_fullkeybord_i"
                style="@style/style_btn_fullkeybord"
                android:text="I" />

            <Button
                android:id="@+id/bt_fullkeybord_j"
                style="@style/style_btn_fullkeybord"
                android:text="J" />

            <Button
                android:id="@+id/bt_fullkeybord_k"
                style="@style/style_btn_fullkeybord"
                android:text="K" />

            <Button
                android:id="@+id/bt_fullkeybord_l"
                style="@style/style_btn_fullkeybord"
                android:text="L" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fullkeybord_row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ll_fullkeybord_row2"
            android:layout_below="@id/ll_fullkeybord_row2"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_fullkeybord_m"
                style="@style/style_btn_fullkeybord"
                android:text="M" />

            <Button
                android:id="@+id/bt_fullkeybord_n"
                style="@style/style_btn_fullkeybord"
                android:text="N" />

            <Button
                android:id="@+id/bt_fullkeybord_o"
                style="@style/style_btn_fullkeybord"
                android:text="O" />

            <Button
                android:id="@+id/bt_fullkeybord_p"
                style="@style/style_btn_fullkeybord"
                android:text="P" />

            <Button
                android:id="@+id/bt_fullkeybord_q"
                style="@style/style_btn_fullkeybord"
                android:text="Q" />

            <Button
                android:id="@+id/bt_fullkeybord_r"
                style="@style/style_btn_fullkeybord"
                android:text="R" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fullkeybord_row4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ll_fullkeybord_row3"
            android:layout_below="@id/ll_fullkeybord_row3"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_fullkeybord_s"
                style="@style/style_btn_fullkeybord"
                android:text="S" />

            <Button
                android:id="@+id/bt_fullkeybord_t"
                style="@style/style_btn_fullkeybord"
                android:text="T" />

            <Button
                android:id="@+id/bt_fullkeybord_u"
                style="@style/style_btn_fullkeybord"
                android:text="U" />

            <Button
                android:id="@+id/bt_fullkeybord_v"
                style="@style/style_btn_fullkeybord"
                android:text="V" />

            <Button
                android:id="@+id/bt_fullkeybord_w"
                style="@style/style_btn_fullkeybord"
                android:text="W" />

            <Button
                android:id="@+id/bt_fullkeybord_x"
                style="@style/style_btn_fullkeybord"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fullkeybord_row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ll_fullkeybord_row4"
            android:layout_below="@id/ll_fullkeybord_row4"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bt_search_backone"
                android:layout_width="@dimen/bt_search_width"
                android:layout_height="@dimen/bt_search_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/bt_keybord_margin"
                android:layout_marginRight="@dimen/bt_keybord_margin"
                android:background="@drawable/selector_search_full_keyboard"
                android:focusable="true"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/btn_backone"
                android:textColor="@color/Grey_500"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_fullkeybord_y"
                style="@style/style_btn_fullkeybord"
                android:text="Y" />

            <Button
                android:id="@+id/bt_fullkeybord_z"
                style="@style/style_btn_fullkeybord"
                android:text="Z" />

            <ImageView
                android:id="@+id/bt_space"
                android:layout_width="@dimen/bt_search_width"
                android:layout_height="@dimen/bt_search_height"
                android:layout_marginLeft="@dimen/bt_keybord_margin"
                android:layout_marginTop="@dimen/bt_keybord_margin"
                android:background="@drawable/selector_search_full_keyboard"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/bt_space"
                android:textColor="@color/Grey_500"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fullkeybord_row6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ll_fullkeybord_row5"
            android:layout_below="@id/ll_fullkeybord_row5"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_fullkeybord_1"
                style="@style/style_btn_fullkeybord"
                android:text="1" />

            <Button
                android:id="@+id/bt_fullkeybord_2"
                style="@style/style_btn_fullkeybord"
                android:text="2" />

            <Button
                android:id="@+id/bt_fullkeybord_3"
                style="@style/style_btn_fullkeybord"
                android:text="3" />

            <Button
                android:id="@+id/bt_fullkeybord_4"
                style="@style/style_btn_fullkeybord"
                android:text="4" />

            <Button
                android:id="@+id/bt_fullkeybord_5"
                style="@style/style_btn_fullkeybord"
                android:text="5" />

            <Button
                android:id="@+id/bt_fullkeybord_6"
                style="@style/style_btn_fullkeybord"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fullkeybord_row7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ll_fullkeybord_row6"
            android:layout_below="@id/ll_fullkeybord_row6"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_fullkeybord_7"
                style="@style/style_btn_fullkeybord"
                android:text="7" />

            <Button
                android:id="@+id/bt_fullkeybord_8"
                style="@style/style_btn_fullkeybord"
                android:text="8" />

            <Button
                android:id="@+id/bt_fullkeybord_9"
                style="@style/style_btn_fullkeybord"
                android:text="9" />

            <Button
                android:id="@+id/bt_fullkeybord_0"
                style="@style/style_btn_fullkeybord"
                android:text="0" />

            <ImageView
                android:id="@+id/bt_search_clear"
                android:layout_width="@dimen/bt_search_width"
                android:layout_height="@dimen/bt_search_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/bt_keybord_margin"
                android:background="@drawable/selector_search_full_keyboard"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/bt_clear"
                android:gravity="center"
                android:textColor="@color/Grey_500"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>
    <!-- 搜索提示 -->

    <RelativeLayout
        android:id="@+id/rl_resust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/searchpage_marginleft_right"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/rl_fullkeybord"
        android:paddingRight="30dp" >

        <TextView
            android:id="@+id/tv_search_tishi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="@string/search_tips"
            android:textColor="@color/Orange_500"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_search_tishi"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignLeft="@id/tv_search_tishi_title"
            android:layout_below="@id/tv_search_tishi_title"
            android:layout_marginTop="10dp"
            android:text="@string/tv_search_tishi"
            android:textColor="@color/Grey_500"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_everybody_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_search_tishi_title"
            android:layout_below="@id/tv_search_tishi"
            android:layout_marginTop="10dp"
            android:text="@string/hotapps"
            android:textColor="@color/Grey_500"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_num_searchresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_everybody_search"
            android:text=""
            android:textColor="@color/Grey_500"
            android:textSize="18sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/post_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_resust"
        android:layout_marginBottom="-40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/rl_fullkeybord"

        android:visibility="visible" />

</RelativeLayout>